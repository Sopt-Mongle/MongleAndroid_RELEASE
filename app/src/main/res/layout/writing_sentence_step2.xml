<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.WritingSentenceStep2Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="26dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/writing_sentence_step2_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문장 쓰기"
        android:textSize="19sp"
        android:textStyle="normal"
        android:textColor="@color/black_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top"/>

    <ProgressBar
        android:id="@+id/writing_sentence_step2_pgb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progressTint="@color/soft_green"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/writing_sentence_step2_pgb_out"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/dot_circle_progresson_out"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step2_pgb" />

    <View
        android:id="@+id/writing_sentence_step2_pgb_in"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/dot_circle_progresson_in"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step2_pgb" />

    <View
        android:id="@+id/writing_sentence_step2_pgb_out2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/dot_circle_progressoff_out"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintEnd_toEndOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintStart_toStartOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step2_pgb"/>

    <View
        android:id="@+id/writing_sentence_step2_pgb_in2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/dot_circle_progressoff_in"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintEnd_toEndOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintStart_toStartOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step2_pgb" />

    <View
        android:id="@+id/view3"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/dot_circle_gray"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintEnd_toEndOf="@+id/writing_sentence_step2_pgb"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step2_pgb" />



    <TextView
        android:id="@+id/writing_sentence_step2_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="한 문장"
        android:textStyle="normal"
        android:textColor="@color/soft_green"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        />
    <TextView
        android:id="@+id/writing_sentence_step2_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/greyish_brown"
        android:text="이 담긴 책을 추가해주세요!"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/writing_sentence_step2_tv_1"
        app:layout_constraintStart_toEndOf="@id/writing_sentence_step2_tv_1"
        />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 제목"
        android:textColor="@color/greyish_brown"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toBottomOf="@id/writing_sentence_step2_tv_1"
        android:layout_marginTop="24dp"
        tools:layout_editor_absoluteY="188dp" />

    <TextView
        android:id="@+id/writing_sentence_step2_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@drawable/et_area"
        android:gravity="start"
        android:hint="책 제목을 검색해주세요."
        android:maxLength="40"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <ImageView
        android:id="@+id/writing_sentence_step2_btn_book_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_btn_search"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="@id/writing_sentence_step2_tv_title"
        app:layout_constraintTop_toTopOf="@id/writing_sentence_step2_tv_title"
        app:layout_constraintBottom_toBottomOf="@id/writing_sentence_step2_tv_title"
        />

    <LinearLayout
        android:id="@+id/writing_sentence_step2_ll_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toBottomOf="@id/writing_sentence_step2_tv_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:src="@drawable/ic_warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="책 제목을 검색해주세요!"
            android:textColor="@color/reddish" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="작가/옮긴이"
        android:textColor="@color/greyish_brown"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/writing_sentence_step2_tv_title" />

    <TextView
        android:id="@+id/writing_sentence_step2_tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_area_grey"
        android:gravity="start"
        android:maxLength="40"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="출판사"
        android:textColor="@color/greyish_brown"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/writing_sentence_step2_tv_author" />

    <TextView
        android:id="@+id/writing_sentence_step2_tv_publisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_area_grey"
        android:gravity="start"
        android:maxLength="40"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />




    <TextView
        android:id="@+id/writing_sentence_step2_btn_next"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_green"
        android:gravity="center"
        android:text="다음"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left" />


</androidx.constraintlayout.widget.ConstraintLayout>