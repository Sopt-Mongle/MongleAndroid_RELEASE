<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59bcbcbc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_library_item_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/line_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_library_sentence_themename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="2sp"
            android:singleLine="true"
            android:textColor="#bcbcbc"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/tv_library_sentence_sentence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/cl_library_item_sentence"
            app:layout_constraintTop_toTopOf="@id/cl_library_item_sentence"
            tools:text="" />

        <TextView
            android:id="@+id/tv_library_sentence_sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_library_sentence_themename"
            app:layout_constraintTop_toBottomOf="@id/tv_library_sentence_themename" />

        <ImageView
            android:id="@+id/img_item_library_sentence_usermark"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/search_result_sentence_ic_curator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_library_sentence_themename"
            app:layout_constraintRight_toLeftOf="@id/tv_item_library_sentence_username"
            app:layout_constraintTop_toBottomOf="@id/tv_library_sentence_sentence" />

        <TextView
            android:id="@+id/tv_item_library_sentence_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="2sp"
            android:text=""
            android:textColor="#bcbcbc"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintStart_toEndOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintTop_toTopOf="@id/img_item_library_sentence_usermark" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>