<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_curator_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_curator_img_profile"
            android:layout_width="67dp"
            android:layout_height="66dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toBottomOf="@id/search_curator_cl"
            app:layout_constraintStart_toStartOf="@id/search_curator_cl"
            app:layout_constraintTop_toTopOf="@id/search_curator_cl" />

        <TextView
            android:id="@+id/search_curator_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-1sp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/search_curator_img_profile"
            app:layout_constraintTop_toTopOf="@+id/search_curator_img_profile" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="1sp"
            android:text="구독자 "
            android:textColor="@color/very_light_pink_two"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/search_curator_tv_keyword"
            app:layout_constraintStart_toStartOf="@+id/search_curator_tv_name"
            app:layout_constraintTop_toBottomOf="@+id/search_curator_tv_name" />

        <TextView
            android:id="@+id/search_curator_tv_subcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="1sp"
            android:text=""
            android:textColor="@color/very_light_pink_two"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="1sp"
            android:text="명"
            android:textColor="@color/very_light_pink_two"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/search_curator_tv_subcount"
            app:layout_constraintStart_toEndOf="@+id/search_curator_tv_subcount"
            app:layout_constraintTop_toTopOf="@+id/search_curator_tv_subcount" />

        <TextView
            android:id="@+id/search_curator_tv_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="3sp"
            android:text=""
            android:textColor="@color/very_light_pink_two"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/search_curator_img_profile"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#59bcbcbc"
            app:layout_constraintBottom_toBottomOf="@id/search_curator_cl"
            app:layout_constraintEnd_toEndOf="@id/search_curator_cl"
            app:layout_constraintStart_toStartOf="@id/search_curator_cl" />

        <CheckBox
            android:id="@+id/search_curator_btn_subscribe"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:background="@drawable/btn_subscribe"
            android:button="@null"
            android:gravity="center"
            android:text="구독"
            android:textSize="14dp"
            android:letterSpacing="-0.02"
            android:textColor="@color/cb_subscribe_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>