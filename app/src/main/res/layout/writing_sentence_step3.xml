<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.WritingSentenceStep3Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="26dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/writing_sentence_step3_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문장 쓰기"
        android:textSize="19sp"
        android:textColor="@color/black_two"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top"/>

    <ProgressBar
        android:id="@+id/writing_sentence_step3_pgb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:max="100"
        android:progressTint="@color/soft_green"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/writing_sentence_step3_pgb_out"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/dot_circle_progresson_out"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb" />

    <View
        android:id="@+id/writing_sentence_step3_pgb_in"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/dot_circle_progresson_in"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb" />

    <View
        android:id="@+id/writing_sentence_step3_pgb_out2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/dot_circle_progresson_out"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintEnd_toEndOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintStart_toStartOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb"/>

    <View
        android:id="@+id/writing_sentence_step3_pgb_in2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/dot_circle_progresson_in"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintEnd_toEndOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintStart_toStartOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb" />
    <View
        android:id="@+id/writing_sentence_step3_pgb_out3"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/dot_circle_progressoff_out"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb"/>

    <View
        android:id="@+id/writing_sentence_step3_pgb_in3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/dot_circle_progressoff_in"
        app:layout_constraintBottom_toBottomOf="@+id/writing_sentence_step3_pgb"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        app:layout_constraintTop_toTopOf="@+id/writing_sentence_step3_pgb" />


    <TextView
        android:id="@+id/writing_sentence_step3_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="한 문장"
        android:textStyle="normal"
        android:textColor="@color/soft_green"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        />
    <TextView
        android:id="@+id/writing_sentence_step3_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/greyish_brown"
        android:text="이 담길 테마를 선택해주세요!"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/writing_sentence_step3_tv_1"
        app:layout_constraintStart_toEndOf="@id/writing_sentence_step3_tv_1"
        />


    <TextView
        android:id="@+id/writing_sentence_step3_tv_theme"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="@drawable/et_area_grey"
        android:maxLength="40"
        android:gravity="start"
        android:layout_marginTop="180dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_left"
        app:layout_constraintEnd_toEndOf="@+id/gl_right"
        />

    <TextView
        android:id="@+id/writing_sentence_step3_btn_theme"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/et_area_green"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginTop="286dp"
        android:text="테마 선택하기"
        android:textColor="@color/soft_green"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left" />

    <LinearLayout
        android:id="@+id/writing_sentence_step3_ll_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintTop_toBottomOf="@id/writing_sentence_step3_btn_theme"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning"
            android:layout_marginVertical="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마를 선택해주세요!"
            android:layout_marginStart="3dp"
            android:textColor="@color/reddish"/>

    </LinearLayout>






    <TextView
        android:id="@+id/writing_sentence_step3_btn_next"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_green"
        android:gravity="center"
        android:text="등록하기"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left" />


</androidx.constraintlayout.widget.ConstraintLayout>