<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="31dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="31dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="32dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="114dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/onboarding_4_bg"
        android:layout_width="0dp"
        android:layout_height="580dp"
        android:background="@drawable/onboarding_4_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 문장으로 풍요로워지는 "
                android:textColor="@color/white"
                android:textSize="23sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몽글"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:textSize="23sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금 바로 시작해보세요!"
                android:textColor="@color/white"
                android:textSize="23sp"
                />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/onboarding_4_img_mongle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_4_img_mongle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="120dp"
        android:layout_marginTop="290dp"/>



    <TextView
        android:id="@+id/onboarding_step4_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="몽글 시작하기"
        android:background="@drawable/btn_green"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/onboarding_4_bg"
        android:layout_marginTop="20dp"
        android:paddingVertical="18dp"/>

    <TextView
        android:id="@+id/onboarding_step4_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한 번 둘러보기"
        android:background="@color/white"
        android:textColor="@color/very_light_pink_two"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toBottomOf="@id/onboarding_step4_login"
        android:padding="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>