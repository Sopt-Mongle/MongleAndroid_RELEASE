<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="98dp">



    <TextView
        android:id="@+id/tv_library_thema_cu_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:text="삶에 지쳐 위태롭고 비틀거릴 때, 누군가에게
기대고만 싶을 때 보면 좋은 문장"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/img_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/img_bookmark"
        android:layout_width="9dp"
        android:layout_height="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="7dp"
        android:background="@color/soft_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_library_thema_cu_info" />

    <TextView
        android:id="@+id/tv_thema_num_library_cu_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="1sp"
        android:text="107"
        android:textColor="#bcbcbc"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_bookmark"
        app:layout_constraintStart_toEndOf="@id/img_bookmark"
        app:layout_constraintTop_toTopOf="@id/img_bookmark" />

    <View
        android:id="@+id/view_library_div"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginStart="7dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/img_bookmark"
        app:layout_constraintStart_toEndOf="@+id/tv_thema_num_library_cu_info"
        app:layout_constraintTop_toTopOf="@id/img_bookmark" />

    <TextView
        android:id="@+id/tv_sentence_library_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="1sp"
        android:text="문장 "
        android:textColor="#bcbcbc"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_bookmark"
        app:layout_constraintStart_toEndOf="@+id/view_library_div"
        app:layout_constraintTop_toTopOf="@id/img_bookmark" />

    <TextView
        android:id="@+id/tv_sentence_count_library_item_cu_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="1sp"
        android:text="15"
        android:textColor="#bcbcbc"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_bookmark"
        app:layout_constraintStart_toEndOf="@id/tv_sentence_library_item"
        app:layout_constraintTop_toTopOf="@id/img_bookmark" />

    <TextView
        android:id="@+id/tv_num_library_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="1sp"
        android:text="개"
        android:textColor="#bcbcbc"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_bookmark"
        app:layout_constraintStart_toEndOf="@id/tv_sentence_count_library_item_cu_info"
        app:layout_constraintTop_toTopOf="@id/img_bookmark" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59bcbcbc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>