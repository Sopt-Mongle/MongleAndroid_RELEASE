<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_login_cl_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="58dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/login_img_marks" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:text="몽글"
            android:textColor="#3e3e3e"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:text="에서"
            android:textColor="#717171"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:text="책 속의 문장을"
            android:textColor="#717171"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:text="수집해보세요!"
            android:textColor="#717171"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_login_cl_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#b2f8f5ed"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/activity_login_et_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/et_area"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:hint="이메일을 입력해주세요."
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="9sp"
            android:maxLines="1"
            android:nextFocusDown="@+id/activity_login_et_pass"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_login_et_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/et_area"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:hint="비밀번호를 입력해주세요."
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="9sp"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_et_email" />

        <TextView
            android:id="@+id/activity_login_btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/btn_login_green"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="12sp"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_login_et_pass"
            app:layout_constraintStart_toStartOf="@+id/activity_login_et_pass"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_et_pass" />

        <TextView
            android:id="@+id/activity_login_tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="14sp"
            android:paddingLeft="11dp"
            android:paddingTop="3dp"
            android:paddingRight="13dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:text="회원가입"
            android:textColor="@color/very_light_pink_two"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_sentence_detail_likes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_btn_login" />

        <TextView
            android:id="@+id/activity_login_tv_findid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="14sp"
            android:paddingLeft="11dp"
            android:paddingTop="3dp"
            android:paddingRight="13dp"
            android:paddingBottom="5dp"
            android:text="이메일 찾기"
            android:textColor="@color/very_light_pink_two"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView16"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_sentence_detail_likes"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_btn_login" />

        <TextView
            android:id="@+id/activity_login_tv_findpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="14sp"
            android:paddingLeft="11dp"
            android:paddingTop="3dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:includeFontPadding="false"
            android:text="비밀번호 찾기"
            android:textColor="@color/very_light_pink_two"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_btn_login" />

        <ImageView
            android:id="@+id/img_sentence_detail_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/activity_login_tv_join"
            app:layout_constraintEnd_toStartOf="@+id/activity_login_tv_findid"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activity_login_tv_join"
            app:layout_constraintTop_toTopOf="@+id/activity_login_tv_join"
            app:srcCompat="@drawable/div_line" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/activity_login_tv_join"
            app:layout_constraintEnd_toStartOf="@+id/activity_login_tv_findpass"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activity_login_tv_findid"
            app:layout_constraintTop_toTopOf="@+id/activity_login_tv_join"
            app:srcCompat="@drawable/div_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="294dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login_cl_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/login_img_mongle" />

</androidx.constraintlayout.widget.ConstraintLayout>