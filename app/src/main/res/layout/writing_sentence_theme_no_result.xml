<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="16dp"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="19dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/writing_sentence_book_no_result_btn_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/writing_sentence_btn_cancel"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 검색"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/black_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top"/>

    <EditText
        android:id="@+id/writing_sentence_book_no_result_et_search"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="@drawable/et_area"
        android:layout_marginTop="75dp"
        android:paddingStart="15dp"
        android:paddingEnd="51dp"
        android:maxLines="1"
        android:maxLength="40"
        android:hint="테마를 검색해주세요."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right">
        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/writing_sentence_book_no_result_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_search"
        android:padding="13dp"
        app:layout_constraintTop_toTopOf="@id/writing_sentence_book_no_result_et_search"
        app:layout_constraintBottom_toBottomOf="@id/writing_sentence_book_no_result_et_search"
        app:layout_constraintEnd_toEndOf="@id/writing_sentence_book_no_result_et_search"
        />

    <ImageView
        android:id="@+id/writing_sentence_book_no_result_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="14dp"
        android:src="@drawable/writing_sentence_theme_6_error_btn_erase"
        app:layout_constraintEnd_toStartOf="@id/writing_sentence_book_no_result_btn_search"
        app:layout_constraintTop_toTopOf="@id/writing_sentence_book_no_result_et_search"
        app:layout_constraintBottom_toBottomOf="@id/writing_sentence_book_no_result_et_search"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_empty2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="검색 결과가 없습니다."
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 키워드로 검색해보세요!"
            android:textColor="@color/very_light_pink_two"
            android:textSize="16sp" />



    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/btn_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/writing_sentence_theme_result_btn_next"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_green"
        android:gravity="center"
        android:text="테마 선택하기"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        />




</androidx.constraintlayout.widget.ConstraintLayout>