<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_library_item_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_library_sentence_themename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="2sp"
            android:singleLine="true"
            android:text="번아웃을 극복하고 싶을 때 봐야하는 문장"
            android:textColor="#bcbcbc"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/tv_library_sentence_sentence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/cl_library_item_sentence"
            app:layout_constraintTop_toTopOf="@id/cl_library_item_sentence" />

        <TextView
            android:id="@+id/tv_library_sentence_sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:maxLines="2"
            android:text="결국 봄이 언제나 찾아왔지만, 하마터면 오지 않을 뻔 했던 봄을 생각하면 마음이 섬찟해진다. "
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintEnd_toStartOf="@id/library_sentence_more"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tv_library_sentence_themename"
            app:layout_constraintTop_toBottomOf="@id/tv_library_sentence_themename" />

        <ImageView
            android:id="@+id/library_sentence_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="18dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:src="@drawable/more_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_library_sentence_sentence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_library_sentence_sentence" />

        <LinearLayout
            android:id="@+id/library_sentence_more_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/library_sentence_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/library_sentence_more"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="14sp"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                android:background="@drawable/background_rectangle"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textSize="14sp"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                android:background="@drawable/background_rectangle"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_item_library_sentence_usermark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/my_sentence_bookmark_ic_curator_1"
            app:layout_constraintBottom_toTopOf="@id/view3"
            app:layout_constraintLeft_toLeftOf="@id/tv_library_sentence_themename"
            app:layout_constraintRight_toLeftOf="@id/tv_item_library_sentence_username"
            app:layout_constraintTop_toBottomOf="@id/tv_library_sentence_sentence" />


        <TextView
            android:id="@+id/tv_item_library_sentence_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/very_light_pink_two"
            android:text="예스리"
            app:layout_constraintBottom_toBottomOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintStart_toEndOf="@id/img_item_library_sentence_usermark"
            app:layout_constraintTop_toTopOf="@id/img_item_library_sentence_usermark" />


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#59bcbcbc"
            app:layout_constraintBottom_toBottomOf="@id/cl_library_item_sentence"
            app:layout_constraintEnd_toEndOf="@id/cl_library_item_sentence"
            app:layout_constraintStart_toStartOf="@id/cl_library_item_sentence" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>