<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="71dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="71dp"
        android:orientation="vertical"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:src="@drawable/writing_theme_finish_img_mongle_theme"
        app:layout_constraintStart_toStartOf="@id/gl_left"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마가 등록되었습니다!"
        android:layout_marginTop="351dp"
        android:textSize="19dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="최대 140자까지 입력 가능하며, 책의 문장을\n
임의로 변형하지 않게 주의해주세요!"
        android:textSize="16dp"
        android:textColor="@color/very_light_pink_two"
        android:layout_marginTop="389dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/writing_theme_finish_btn_write"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_green"
        android:gravity="center"
        android:text="이 테마에 문장 쓰러가기"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_marginTop="483dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left" />

    <TextView
        android:id="@+id/writing_theme_finish_btn_main"
        style="@android:style/ButtonBar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_white"
        android:gravity="center"
        android:text="메인으로 돌아가기"
        android:textColor="@color/soft_green"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_marginTop="542dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintStart_toStartOf="@id/gl_left" />



</androidx.constraintlayout.widget.ConstraintLayout>