<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".activity.LibraryWrittenSentenceDeleteActivity">


    <ImageView
        android:id="@+id/img_dialog_delete_mongle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="@id/img_background_delete_dialog"
        app:layout_constraintBottom_toTopOf="@id/img_background_delete_dialog"
        app:srcCompat="@drawable/mongle_sad" />

    <ImageView
        android:id="@+id/img_background_delete_dialog"
        android:layout_width="304dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dialog_area"/>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="69dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="-1sp"
        android:text="문장을 삭제하시겠어요?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/img_background_delete_dialog"
        app:layout_constraintStart_toStartOf="@id/img_background_delete_dialog"
        app:layout_constraintTop_toTopOf="@id/img_background_delete_dialog" />

    <TextView
        android:id="@+id/tv_delete_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/dialog_btn_yes"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:paddingStart="58dp"
        android:paddingTop="9dp"
        android:paddingEnd="57dp"
        android:paddingBottom="8dp"
        android:text="네"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_background_delete_dialog"
        app:layout_constraintLeft_toLeftOf="@id/img_background_delete_dialog"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete" />

    <TextView
        android:id="@+id/tv_delete_no"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dialog_btn_no"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:paddingStart="45dp"
        android:paddingTop="9dp"
        android:paddingEnd="44dp"
        android:paddingBottom="8dp"
        android:text="아니요"
        android:textColor="@color/soft_green"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quit_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_delete_yes"
        app:layout_constraintTop_toTopOf="@+id/tv_delete_yes"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>