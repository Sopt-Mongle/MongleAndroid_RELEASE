<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".activity.SettingActivity">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:letterSpacing="-0.04"
        android:text="설정"
        android:textColor="#292929"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_back_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_setting"
        app:layout_constraintTop_toTopOf="@id/tv_setting" />

    <TextView
        android:id="@+id/tv_personal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보"
        android:textColor="#838383"
        android:textSize="15sp"
        android:letterSpacing="-0.04"
        android:layout_marginTop="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting" />

    <TextView
        android:id="@+id/tv_change_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:textColor="@color/black_two"
        android:textSize="17sp"
        android:layout_marginTop="11dp"
        android:letterSpacing="-0.04"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_info"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 설정"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_change_profile"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="푸쉬 알림 설정"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_account"
        app:layout_constraintLeft_toLeftOf="parent" />
    
    <View
        android:id="@+id/view_setting_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#e7e7e7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_push" />

    <TextView
        android:id="@+id/tv_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의"
        android:textColor="#838383"
        android:textSize="15sp"
        android:letterSpacing="-0.04"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/view_setting_line_1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_cs_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:1 문의하기"
        android:textColor="@color/black_two"
        android:textSize="17sp"
        android:layout_marginTop="13dp"
        android:letterSpacing="-0.04"
        app:layout_constraintTop_toBottomOf="@id/tv_cs"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_cs_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제 신고하기"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cs_one"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/view_setting_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="#e7e7e7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cs_problem" />

    <TextView
        android:id="@+id/tv_setting_info_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 정보"
        android:textColor="#838383"
        android:textSize="15sp"
        android:letterSpacing="-0.04"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/view_setting_line_2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_info_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버전 정보"
        android:textColor="@color/black_two"
        android:textSize="17sp"
        android:layout_marginTop="13dp"
        android:letterSpacing="-0.04"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_info_app"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_info_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개발자 정보"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_info_version"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_info_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 운영정책"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_info_developer"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 처리방침"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_info_service"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_setting_opensource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오픈소스 라이선스"
        android:textSize="17sp"
        android:textColor="@color/black_two"
        android:letterSpacing="-0.04"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_privacy"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_change_profile"
        app:layout_constraintBottom_toBottomOf="@id/tv_change_profile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_account"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_account" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/sb_setting_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:kswThumbColor="#ffffff"
        app:kswBackRadius="20dp"
        app:kswBackColor="@color/switch_button_state"
        app:kswFadeBack="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_push"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_push"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_cs_one"
        app:layout_constraintBottom_toBottomOf="@id/tv_cs_one" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_cs_problem"
        app:layout_constraintBottom_toBottomOf="@id/tv_cs_problem" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_info_version"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_info_version" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_info_developer"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_info_developer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_info_service"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_info_service" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_privacy"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_privacy" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_setting_opensource"
        app:layout_constraintBottom_toBottomOf="@id/tv_setting_opensource" />




</androidx.constraintlayout.widget.ConstraintLayout>